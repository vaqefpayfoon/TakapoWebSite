@model Product
<div class="container row">
    <div class="col-12 col-sm-6">
        <div class="card bg-primary shadow-soft border-light">
            <img src="@Model.ImageUrl" alt="@Model.ImageAlt">
            <div class="card-footer border-top border-light text-right p-4">
                <div href="#" class="h5">@Model.ImageTitle</div>
                <div class="mt-2">@Model.ImagePassage</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6">
        <div class="card bg-primary shadow-soft border-light">
            <div class="card-body border-top border-light p-4">
                <ul class="list-group">
                    @foreach (var item in Model.ProductDetails)
                    {
                        <li class="list-group-item text-right">
                            @item.Passage
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
@if (Model.CompleteInfo.Count > 0)
{
    <div class="container row mt-3 pt-3">
        <div class="col">
            <div class="card bg-primary shadow-soft border-light">
                <div class="card-body border-top border-light p-4">
                    <ul class="list-group">
                        @foreach (var item in Model.CompleteInfo)
                        {
                            <li class="list-group-item text-right">
                                @item.Passage
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}